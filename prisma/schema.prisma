generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  avatar   String

  posts Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  authorId Int
  cover    String
  title    String
  slug     String @unique
  body     String
  markdown String

  author User @relation(fields: [authorId], references: [id])
}
